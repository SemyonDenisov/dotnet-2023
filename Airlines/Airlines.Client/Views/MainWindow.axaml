<Window xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vm="using:Airlines.Client.ViewModels"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
x:Class="Airlines.Client.Views.MainWindow"
Icon="/Assets/avalonia-logo.ico"
Title="Airlines.Client">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/AirlinesStyles.axaml"/>
	</Window.Styles>
	<Grid Classes="MainGrid" RowDefinitions="Auto, *">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Classes="ToolButton" Command="{Binding OnAddCommand}">
				<Image Source="/Assets/add.png"/>
			</Button>
			<Button Classes="ToolButton" Command="{Binding OnChangeCommand}">
				<Image Source="/Assets/change.png"/>
			</Button>
			<Button Classes="ToolButton" Command="{Binding OnDeleteCommand}">
				<Image Source="/Assets/delete.png"/>
			</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="False"
			      Items="{Binding Passengers}"
				  SelectedItem="{Binding SelectedPassenger}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>

</Window>